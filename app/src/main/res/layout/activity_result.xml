<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <TextView
        android:textColor="@color/purple_700"
        android:layout_marginTop="16dp"
        android:text="Your BMI is:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<TextView
    android:id="@+id/textview_result"
    android:layout_width="match_parent"
    android:textAlignment="center"
    android:padding="16dp"
    android:layout_height="wrap_content"
    android:text="OlÃ¡ Danilo"
    android:textSize="38sp"/>
    <TextView
        android:textStyle="bold"
        android:id="@+id/textview_Classification"
         tools:text="Classification :Normal"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:text="See BMI table bellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Less than 18,5 Underweight"
        android:layout_marginStart="16dp" />

    <TextView
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18,5 a 24,9	Normal"
        android:layout_marginStart="16dp" />

    <TextView
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 a 29,9	Overweight"
        android:layout_marginStart="16dp" />

    <TextView
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 a 34,9	Obesity class I"
        android:layout_marginStart="16dp" />

    <TextView
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35 a 39,9	Obesity class II"
        android:layout_marginStart="16dp" />

    <TextView
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Over 40	Obesity class III"
        android:layout_marginStart="16dp" />

</LinearLayout>